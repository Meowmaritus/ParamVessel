                                    Text="{Binding Name}"
                                    Padding="0"
                                    Margin="2"
                                    VerticalContentAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </local:ParamDataGridTemplateColumn>

                </DataGrid.Columns>

