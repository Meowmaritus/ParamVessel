                        <MenuItem x:Name="ContextMenuParamRow_CopyAllValues" Header="Copy Bytes" Click="ContextMenuParamRow_CopyAllValues_Click" InputGestureText="Ctrl+C"/>
                        <MenuItem x:Name="ContextMenuParamRow_PasteAllValues" Header="Paste Bytes" Click="ContextMenuParamRow_PasteAllValues_Click" IsEnabled="{Binding IsParamRowClipboardValid}" InputGestureText="Ctrl+V"/>
                        <Separator/>
                        <MenuItem x:Name="ContextMenuParamRow_Delete" Click="ContextMenuParamRow_Delete_Click" InputGestureText="Shift+Delete">
                            <MenuItem.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        Delete entry <Run Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=SelectedItem.ID}"/> ("<Run Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=SelectedItem.Name}"/>")?
                                    </TextBlock>
                                </DataTemplate>
                            </MenuItem.HeaderTemplate>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.Columns>

                    <local:ParamDataGridTemplateColumn
                    Header="ID"
                    ClipboardContentBinding="{Binding ID}"
                    Width="80"
                        
                    >

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock 
                                Text="{Binding ID}"
                                Height="16"
                                FontWeight="Bold"
                                Foreground="White"
                                    
                                />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox 
                                Text="{Binding ID}"
                                Padding="0"
                                Margin="2"
                                VerticalContentAlignment="Center"
                                FontWeight="Bold"
                                Foreground="White"
                                />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </local:ParamDataGridTemplateColumn>

                    <local:ParamDataGridTemplateColumn
                    Header="Name"
                    ClipboardContentBinding="{Binding Name}"
                    Width="360"
